# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=digital_ninja_db

# CORS Configuration
CORS_ORIGINS=*

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=72

# AI Chat (Emergent LLM Key)
EMERGENT_LLM_KEY=your_emergent_llm_key

# SMTP Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_FROM=Digital Ninja <noreply@digitalninja.app>

# Peach Payments (ZAR Billing)
PEACH_PAYMENTS_MERCHANT_ID=your_merchant_id
PEACH_PAYMENTS_API_KEY=your_api_key
PEACH_PAYMENTS_MODE=test

# Security
ALLOWED_IPS=*

# Frontend URL (for OAuth redirects)
# For local development: http://localhost:3000
# For staging: https://your-app.preview.emergentagent.com
# For production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:3000